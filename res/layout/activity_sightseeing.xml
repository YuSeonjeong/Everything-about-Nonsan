<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_festival"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cjsrn.myapplication.FestivalActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:srcCompat="@drawable/bar_2"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="100dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/sicon1"
            android:layout_marginRight="20dp"
            android:id="@+id/icon1"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/sicon2"
            android:id="@+id/icon2"/>
    </LinearLayout>


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:paddingTop="20dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/sicon3"
        android:layout_marginRight="20dp"
        android:id="@+id/icon3"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/sicon4"
        android:id="@+id/icon4"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true"

    >

        <AutoCompleteTextView
            android:id="@+id/myautocomplete"
            android:layout_width="168dp"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:completionThreshold="1"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:hint="검색" >

        </AutoCompleteTextView>

        <ImageView
            android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/search" />
    </LinearLayout>
</LinearLayout>